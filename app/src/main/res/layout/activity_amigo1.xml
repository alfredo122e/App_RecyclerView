<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".Amigo1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="373dp"
        android:layout_height="43dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="26dp"
        android:background="#FFFFFF"
        android:fontFamily="cursive"
        android:text="Rossmery Alexandra Domínguez Chávez"
        android:textColor="#3F51B5"
        android:textColorHint="#3F51B5"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="266dp"
        android:layout_height="336dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/image2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="45dp"
        android:background="#FFFFFF"
        android:fontFamily="casual"
        android:text="Mi nombre es Rossmery Alexandra Domínguez Chávez, tengo 19 años, estudio la carrera de licenciatura en administración de empresas turísticas, soy amiga de Alfredo, soy una persona activa y curiosa, me gusta ayudar a las personas que lo necesiten y sobre todo a los animales, me encanta conocer nuevas cosas y lugares, también soy una persona muy sociable, me gusta el deporte en especial el fútbol."
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>