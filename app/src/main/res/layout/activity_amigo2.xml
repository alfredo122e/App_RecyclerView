<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".Amigo2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="231dp"
        android:layout_height="36dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="26dp"
        android:background="#FFFFFF"
        android:fontFamily="cursive"
        android:text="Valery Michelle Oviedo."
        android:textColor="#3F51B5"
        android:textColorHint="#3F51B5"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="266dp"
        android:layout_height="336dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/image6" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="45dp"
        android:background="#FFFFFF"
        android:fontFamily="casual"
        android:text="Mi nombre es Valery Michelle Oviedo, tengo 19 años de edad y actualmente estudio la carrera de Arquitectura, soy amiga de Alfredo desde hace mucho tiempo, soy fan del maquillaje y tomarme fotos, me encantan los animales en especial los perros, soy una persona curiosa y divertida, me gusta vivir nuevas experiencias conociendo lugares y haciendo amigos nuevos, el mar es mi lugar favorito y sobre todo si tengo buena compañía."
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>